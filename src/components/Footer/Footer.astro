---
import AvatarList from './AvatarList.astro';
import Intercom from '@intercom/messenger-js-sdk';

type Props = {
	path: string;
};
const { path } = Astro.props as Props;

Intercom({
  app_id: 'ulyaoqvr'
});

---

<footer>
	<AvatarList path={path} />
</footer>

<style>
	footer {
		margin-top: auto;
		padding: 2rem;
		border-top: 3px solid var(--theme-divider);
	}
</style>